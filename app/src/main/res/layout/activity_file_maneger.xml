<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.FileEncryptActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="45dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_encrypt_photo"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@mipmap/photo"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="99dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_photo"
            android:text="图片加密"
            android:layout_gravity="center"
            android:textSize="20dp"
            tools:layout_editor_absoluteX="86dp"
            tools:layout_editor_absoluteY="252dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_encrypt_document"
            android:layout_width="160dp"
            android:layout_height="140dp"
            android:src="@mipmap/document"
            tools:layout_editor_absoluteX="219dp"
            tools:layout_editor_absoluteY="98dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_document"
            android:text="文档加密"
            android:textSize="20dp"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="86dp"
            tools:layout_editor_absoluteY="252dp" />
    </LinearLayout>
</LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="50dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/image_encrypt_video"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@mipmap/video"
            tools:layout_editor_absoluteX="40dp"
            tools:layout_editor_absoluteY="295dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_video"
            android:text="视频加密"
            android:textSize="20dp"
            android:layout_gravity="center"
            tools:layout_editor_absoluteX="86dp"
            tools:layout_editor_absoluteY="252dp" />
    </LinearLayout>

</LinearLayout>