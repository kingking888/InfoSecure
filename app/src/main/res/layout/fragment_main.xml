<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_main">

    <Button
        android:id="@+id/bt_encrypt"
        android:layout_width="112dp"
        android:layout_height="60dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="300dp"
        android:text="加密文件"
        app:layout_constraintBottom_toTopOf="@+id/bt_secret"
        app:layout_constraintEnd_toStartOf="@+id/bt_decode"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bt_decode"
        android:layout_width="105dp"
        android:layout_height="58dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="72dp"
        android:text="解密文件"
        app:layout_constraintBottom_toTopOf="@+id/bt_power"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/bt_secret"
        android:layout_width="108dp"
        android:layout_height="55dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="404dp"
        android:text="私密日志"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/bt_power"
        app:layout_constraintHorizontal_bias="0.297"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bt_power"
        android:layout_width="102dp"
        android:layout_height="56dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="404dp"
        android:text="权限管理"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />
</androidx.constraintlayout.widget.ConstraintLayout>
