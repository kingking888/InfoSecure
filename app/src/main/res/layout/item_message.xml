<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/imageV_person"
        android:layout_width="67dp"
        android:layout_height="70dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textV_mes_content"
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_marginBottom="796dp"
        android:textSize="18dp"
        android:layout_toRightOf="@id/imageV_person"
        android:layout_below="@id/textV_personName"
        android:text="TextView"
         />

    <TextView
        android:id="@+id/textV_personName"
        android:layout_width="127dp"
        android:layout_height="30dp"
        android:text="TextView"
        android:layout_toRightOf="@id/imageV_person"
         />

    <TextView
        android:id="@+id/textV_date"
        android:layout_width="235dp"
        android:layout_height="30dp"
        android:text="TextView"
        android:layout_toRightOf="@id/textV_personName"
        />
</RelativeLayout>
